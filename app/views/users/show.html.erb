<div class ="row">
  <div class ="col-md-3 user_show">
    <% unless @user.profile_image? %>
      <%= image_tag("default_picture.jpg", :alt => "アイコン")%>
    <% else %>
      <%= image_tag @user.profile_image_url(:thumb)%>
    <% end %>
    <div class="text-center">
      <%= render 'relationships/follow_button', user: @user %>
    </div>
  </div>
  <div class ="col-md-8 col-md-offset-1">
    <h2><%= @user.name%></h2>
    
    <br><br><br><br><br><br><br>
    <table>
      <tr>
        <td>
          <%= link_to user_path(@user) do%>
            投稿<%= @count_posts %>件
          <% end%>
        </td>
        <td style="width: 1px; background-color: gray;"></td>
        
        <td>
          <%= link_to favorites_user_path(@user) do%>
            お気に入り<%= @count_favorites %>件&ensp;
          <% end%>
        </td>
        <td style="width: 1px; background-color: gray;"></td>
        
        <td>
          <%= link_to followings_user_path(@user) do%>
              フォロー<%= @count_followings %>人&ensp;
          <% end%>
        </td>
        <td style="width: 1px; background-color: gray;"></td>
        
        <td>
          <%= link_to followers_user_path(@user) do%>
            フォロワー<%= @count_followers %>人&ensp;
          <% end%>
        </td>
      </tr>
    </table>
  </div>
</div>
<div class= "text-center">
  <h3>投稿<h3>
</div>
<%= render 'posts/posts', posts: @posts %>



  
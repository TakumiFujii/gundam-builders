<% if current_user.favorited?(post) %>
  <%= form_for(current_user.favorites.find_by(post_id: post.id), html: {method: :delete }) do |f|%>
    <%= hidden_field_tag :post_id, post.id %>
    <%= f.submit "お気に入り済み", class: "btn btn-default btn-block btn-xs form-inline"%> 
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :post_id, post.id %>
    <%= f.submit "お気に入り", class: "btn btn-default btn-block btn-xs form-inline"%>
  <% end %>
<% end %>
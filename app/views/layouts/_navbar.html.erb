<header>
  <%= link_to root_url do %>
    <%= image_tag("toppage_photo.jpg", :alt => "トップ画像", class: "toppage_photo") %>
  <% end %>
  <div class="buttons">
    <div class ="text-right" style ="background-color:white;">
      <%  unless logged_in? %>
        <%= link_to "新規登録", new_user_path, class: "btn btn-sm btn-primary"%>
        <%= link_to "ログイン", login_path, class: "btn btn-sm btn-success"%>
      <% else%>
        <%= link_to "ガンプラを投稿する", new_post_path, class: "btn btn-sm btn-primary"%>
      <% end %>
    </div>
    <%if logged_in?%>
      
    <% end %>
  </div>
  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "☆ガンビル☆", root_url, class: "navbar-brand"%>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to 'タグ', categories_path %></li>
          <li><%= link_to '特集', articles_path %></li>
          <li><%= link_to "ランキング", rankings_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'マイページ', user_path(current_user) %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to '新規登録', signup_path %></li>
          <li><%= link_to 'ログイン', login_path %></li>
        <% end %>
      </ul>
      </div>
    </div>
  </nav>
</header>